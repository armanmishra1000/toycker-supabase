# Supabase Configuration (Required)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# Your store URL, should be updated to where you are hosting your storefront.
NEXT_PUBLIC_BASE_URL=http://localhost:8000

# Production: Update this to your Vercel frontend URL when deployed
NEXT_PUBLIC_STORE_URL=https://your-app.vercel.app

# Default region (ISO-2 lowercase format)
NEXT_PUBLIC_DEFAULT_REGION=in

# Stripe (Optional - for Stripe payments)
NEXT_PUBLIC_STRIPE_KEY=

# PayU Configuration (for India payments)
PAYU_MERCHANT_KEY=
PAYU_MERCHANT_SALT=

# Next.js Revalidation Secret
REVALIDATE_SECRET=supersecret

# R2/CDN Configuration for images
NEXT_PUBLIC_R2_MEDIA_PROTOCOL=https
NEXT_PUBLIC_R2_MEDIA_HOSTNAME=cdn.toycker.in
NEXT_PUBLIC_R2_MEDIA_PATHNAME=/uploads/**
NEXT_PUBLIC_R2_PUBLIC_URL=https://cdn.toycker.in

# Performance tuning flags
NEXT_PUBLIC_MULTI_COLLECTIONS_ENABLED=false
NEXT_PUBLIC_MULTI_COLLECTIONS_REVALIDATE=0
NEXT_PUBLIC_EXCLUSIVE_COLLECTIONS_REVALIDATE=300